@using BlogTutorial.Models;
@model Post
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <form method="post" asp-action="addPost" asp-controller="Admin">


                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label" asp-for=Title></label>
                            <input class="form-control" asp-for=Title />
                        </div>
                     </div>
                     <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label" asp-for=SubTital></label>
                            <input class="form-control" asp-for=SubTital />
                        </div>
                    </div>
                </div>
                
                <div class="row justify-content-center">
                    <div class="col-md-6">
                       <div class="form-group">
                            <label class="col-form-label" asp-for=Date></label>
                            <input class="form-control" asp-for=Date />
                        </div>
                     </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label" asp-for=Slug></label>
                            <input class="form-control" asp-for=Slug />
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="col-form-label" asp-for=Image></label>
                    <input class="form-control" asp-for=Image />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for=Content></label>
                    <textarea class="form-control" asp-for=Content id="editor">

                    </textarea>
                </div>
                <button class="=btn btn-primary" type="submit">Creat Post</button>
            </form>
        </div>
    </div>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>
