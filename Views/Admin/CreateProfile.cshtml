@using BlogTutorial.ViewModel;
@model ProfileViewModel

<div class="container">
    <div class="row align-content-end">
        <div class="col-md-10">
            <h1>Create New Profile</h1>
            <form method="post" enctype="multipart/form-data" asp-action="CreateProfile" asp-controller="admin" >
                
                <div class="row align-content-center">
                    <div class="col-md-6">
                        <div class="form-group" >
                            <label asp-for="Fname" class="form-label"></label>
                            <input asp-for="Fname" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Lname" class="form-label"></label>
                            <input asp-for="Lname" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row align-content-center">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Image" class="form-label"></label>
                            <input asp-for="Image" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control"></textarea>
                </div>

                <div class="row align-content-center">
                    <div class="col-md-6">
                        <div class="form-group" type="password">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password"/>
                            <span asp-validation-for=ConfirmPassword class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Creat Profile</button>
            </form>
        </div>
    </div>
</div>

